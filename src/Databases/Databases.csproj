<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <AssemblyName>BindOpen.Plus.Databases</AssemblyName>
    <PackageId>BindOpen.Plus.Databases</PackageId>
    <Product>BindOpen.Plus.Databases</Product>
    <Company>BindOpen</Company>
    <Copyright>Copyright ï¿½BindOpen 2011-2023</Copyright>
    <Description>BindOpen is a framework that allows you to build widely-extended applications. This package handles database connections.</Description>
