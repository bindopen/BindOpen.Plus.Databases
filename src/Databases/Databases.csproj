    <RootNamespace>BindOpen.Plus.Databases</RootNamespace>
    <PackageProjectUrl>https://github.com/bindopen/BindOpen.Plus.Databases</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bindopen/BindOpen.Plus.Databases.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
